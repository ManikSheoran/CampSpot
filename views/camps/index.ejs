<% layout('layouts/boilerplate') %>

<div class="container">
    <h1 class="text-center mt-5">All Camps</h1>
    <a class="btn btn-success mb-3" href="/camps/new">Add New Camp</a>

    <% for(let camp of camps){ %>
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="<%= camp.image.url %>" alt="<%= camp.title %>" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title"><%= camp.title %></h2>
                    <p class="card-text">Location: <%= camp.location %></p>
                    <a href="/camps/<%= camp._id %>" class="btn btn-success">Details</a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>