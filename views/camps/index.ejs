<% layout('layouts/boilerplate') %>

<h1>All Camps</h1>
<a class="btn btn-primary" href="/camps/new">ADD NEW CAMP</a>

<% for(let camp of camps){ %>
<div class="card">
    <div class="row m-3">
        <div class="col-md-4">
            <img src="<%= camp.image.url %>" alt="" class="img-fluid">       
        </div>
        <div class="col-md-8">
            <h2 class="card-title">
                <%= camp.title %>
            </h2>
            <a class="btn btn-primary" href="/camps/<%= camp._id %>">Details</a>
        </div>
    </div>
</div>
<% } %>