<% layout('layouts/boilerplate') %>

<h1>All Camps</h1>
<a class="btn btn-primary" href="/camps/new">ADD NEW CAMP</a>

<% for(let camp of camps){ %>
<div class="card">
    <div class="row m-3">
        <div class="col-md-4">
            <% if(camp.image && camp.image.url) { %>
            <img src="<%= camp.image.url %>" alt="" class="img-fluid">
            <% } else { %>
            <img src="https://images.unsplash.com/photo-1507584359040-f44a16355689?q=80&w=1074&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Default Image" class="img-fluid">
            <% } %>
        </div>
        <div class="col-md-8">
            <h2 class="card-title">
                <%= camp.title %>
            </h2>
            <a class="btn btn-primary" href="/camps/<%= camp._id %>">Details</a>
        </div>
    </div>
</div>
<% } %>