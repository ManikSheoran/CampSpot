<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Camp</h1>
        <div class="col-6 offset-3">
            <form action="/camps" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="camp[title]" required>
                    <div class="invalid-feedback">
                        Title is required.
                    </div>
                </div>
                <input type="file" name="image" id="">

                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="text" id="image" name="camp[image]" required>
                    <div class="invalid-feedback">
                        Image URL is required.
                    </div>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="camp[location]" required>
                    <div class="invalid-feedback">
                        Location is required.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="camp[description]"
                        required></textarea>
                    <div class="invalid-feedback">
                        Description is required.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">â‚¹</span>
                        <input class="form-control" type="text" id="price" name="camp[price]" required>
                        <div class="invalid-feedback">
                            Price is required.
                        </div>
                    </div>

                </div>
                <button class="btn btn-primary">Add</button><br><a class="btn btn-primary mt-3" href="/camps">All
                    Camps</a>
            </form>
        </div>
    </div>