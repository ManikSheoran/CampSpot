<% layout('layouts/boilerplate') %>
<div class="row d-flex justify-content-center">
    <div class="card col-5 m-3">
        <img class="card-img-top" src="<%=camp.image%>" alt="" width="100%">
        <div class="card-body">
            <h5 class="card-title">
                <%= camp.title %>
            </h5>
            <p class="card-text">
                <%= camp.description %>
            </p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <%= camp.location %>
            </li>
            <li class="list-group-item">
                <b>â‚¹ <%= camp.price %></b>
            </li>
        </ul>
        <div class="card-body">
            <a class="btn btn-primary mr-3" href="/camps">All Camps</a>
            <% if(currentUser && camp.author.equals(currentUser._id)) {%>
            <a class="btn btn-primary mr-3" href="/camps/<%= camp.id %>/edit">Edit</a><br>
            <form action="/camps/<%= camp.id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger mt-3">DELETE</button>
            </form>
            <% } %>
        </div>

    </div>

    <div class="card col-5 m-3">

        <% if(currentUser) { %>
        <h5 class="card-title m-3">Leave a Review </h5>
        <form action="/camps/<%=camp._id %>/reviews" method="Post" class="needs-validation" novalidate>
            <div class="m-3">
                <label class="form-label" for="rating">Rating</label>
                <input type="range" class="form-range" min="1" max="5" step="1" id="rating" name="review[rating]">
            </div>
            <div class="m-3">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" required></textarea>
                <div class="invalid-feedback">
                    Review is required.
                </div>
            </div>
            <button class="btn btn-success m-3">Submit</button>
        </form>
        <% } %>
        <div>
            <h5 class="m-3">Reviews</h5>
            <% for(let review of camp.reviews){%>
            <div class="card card-body mb-3">
                <h5 class="card-title">
                    <strong>Rating:</strong>
                    <%= review.rating %>
                </h5>
                <h6 class="card-subtitle">by <%= review.author.username %></h6>
                <p class="card-text">
                    <strong>Review:</strong>
                    <%= review.body %>
                </p>
                <% if(currentUser && review.author.equals(currentUser._id)) {%>
                <form action="/camps/<%= camp._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger mt-3">DELETE</button>
                </form>
                <% } %>
            </div>

            <% } %>

        </div>
    </div>
</div>