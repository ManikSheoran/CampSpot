<% layout('layouts/boilerplate') %>
<div class="container">
  <div class="alert alert-danger mt-5" role="alert">
    <h4 class="alert-heading">Error!</h4>
    <p>
      <%= statusCode %>
    </p>
    <hr>
    <p class="mb-0">
      <%= message %>
    </p>
    <hr>
    <p class="mb-0">
      <%= err.stack %>
    </p>
  </div>
</div>